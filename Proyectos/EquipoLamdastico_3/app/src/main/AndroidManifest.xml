<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proteco.blocknotas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlockNotas">
        <activity
            android:screenOrientation="portrait"
            android:name=".tareas.AddTaskActivity"></activity>
        <activity
            android:name=".tareas.ListTaskActivity"
            android:label="@string/title_activity_list_task"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BlockNotas.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>