<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222831"
            android:text="UNIVERSIDAD NACIONAL AUTÓNOMA DE MÉXICO"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Programa de tecnología en cómputo"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logounam"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logoproteco"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                ></ImageView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Quieres saber más de nosotros?"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:textSize="20dp"
        ></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <!--
           Botones que permitirán el comienzo de otra actividad
           que muestre la información de uno de los colaboradores.
       /-->
        <Button
            android:id="@+id/boton_verRoberto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver perfil carrichi"
            android:textColor="#214151"
            android:backgroundTint="#a2d0c1"
            ></Button>

        <Button
            android:id="@+id/boton_verConic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#a77b81"
            android:textColor="#6c3c43"
            android:text="@string/ver_perfil_conic"
            android:layout_marginVertical="10dp"
            ></Button>

        <Button
            android:id="@+id/boton_verIsaac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#375182"
            android:text="@string/ver_perfil_isaac"></Button>
    </LinearLayout>

</LinearLayout>